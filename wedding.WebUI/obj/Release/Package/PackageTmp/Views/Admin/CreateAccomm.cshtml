@model wedding.Model.Accommodation

@{
    ViewBag.Title = "CreateAccomm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Accommodation</h2>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.WeddingId, new { @Value = ViewData["WeddingId"] });
       

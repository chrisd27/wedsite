@model wedding.Model.LoginDetails

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div id="errorMsg"></div>
    <div class="form-group">
        @Html.Label("First time visitor? Please enter your invitation code!", new { @id = "loginLabel" })
        <div>
            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder ="Invite code" } })
            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
        </div>
        <div id="emailLoginContainer">
            @Html.Label("Previously signed in? Sign in with your email address!", new { @id = "loginLabel" })
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email address", onkeyup = "emailValidation(event)" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div id="emailContainer"></div>
    <div class="form-group">
        <div>
            <input id="loginSubmitButton" type="submit" value="Enter" class="btn btn-default" />
        </div>
    </div>
}